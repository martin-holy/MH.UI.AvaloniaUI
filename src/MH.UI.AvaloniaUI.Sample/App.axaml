<Application
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="MH.UI.AvaloniaUI.Sample.App"
  RequestedThemeVariant="Default">
  <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://MH.UI.AvaloniaUI/Resources/Brushes.axaml"/>
        <ResourceInclude Source="avares://MH.UI.AvaloniaUI/Resources/Effects.axaml"/>
        <ResourceInclude Source="avares://MH.UI.AvaloniaUI/Resources/DataTypes.axaml"/>
        <ResourceInclude Source="avares://MH.UI.AvaloniaUI/Resources/Icons.axaml"/>

        <ResourceInclude Source="avares://MH.UI.AvaloniaUI/Resources/DataTemplates/MHDataTemplates.axaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>

  <Application.Styles>
    <FluentTheme />
    <StyleInclude Source="avares://MH.UI.AvaloniaUI/Resources/Controls/MHControls.axaml"/>
    <StyleInclude Source="avares://MH.UI.AvaloniaUI/Resources/Controls/IconTextBlockItemsControl.axaml"/>
    <StyleInclude Source="avares://MH.UI.AvaloniaUI/Resources/Controls/SlidePanelHost.axaml"/>
    <StyleInclude Source="avares://MH.UI.AvaloniaUI/Resources/Controls/SlidePanelsGridHost.axaml"/>
  </Application.Styles>
</Application>
