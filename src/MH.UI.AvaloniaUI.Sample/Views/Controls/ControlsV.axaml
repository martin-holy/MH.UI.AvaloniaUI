<DataTemplates
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:vmc="clr-namespace:MH.UI.AvaloniaUI.Sample.ViewModels.Controls"
  xmlns:s="clr-namespace:MH.UI.AvaloniaUI.Sample"
  xmlns:vm="clr-namespace:MH.UI.AvaloniaUI.Sample.ViewModels">
    
  <DataTemplate DataType="{x:Type vmc:ControlsVM}">
    <!-- TODO PORT Avalonia doesn't have GroupBox 
    <DataTemplate.Resources>
      <Style TargetType="{x:Type GroupBox}" BasedOn="{StaticResource {x:Type GroupBox}}">
        <Setter Property="Width" Value="180"/>
        <Setter Property="Height" Value="300"/>
        <Setter Property="Margin" Value="2"/>
      </Style>
    </DataTemplate.Resources>-->

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
      <Grid
        IsEnabled="{Binding AreControlsEnabled}"
        DataContext="{ReflectionBinding MainWindow, Source={x:Static s:Core.VM}}"
        x:DataType="vm:MainWindowVM">

        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TODO PORT Avalonia doesn't have GroupBox
        <GroupBox Header="Buttons">
          <ContentPresenter Content="{Binding Buttons}"/>
        </GroupBox>

        <GroupBox Header="Sliders" Grid.Column="1" Grid.Row="0">
          <ContentPresenter Content="{Binding Sliders}"/>
        </GroupBox>

        <GroupBox Header="Texts" Grid.Column="2" Grid.Row="0">
          <ContentPresenter Content="{Binding Texts}"/>
        </GroupBox>

        <GroupBox Header="Lists" Grid.Column="3" Grid.Row="0">
          <ContentPresenter Content="{Binding Lists}"/>
        </GroupBox>-->

        <DockPanel
          Grid.Row="1"
          Grid.Column="0"
          Grid.ColumnSpan="4">

          <CheckBox
            x:Name="chbIsIndeterminate"
            DockPanel.Dock="Left"
            Content="IsIndeterminate"/>
          <ProgressBar
            Value="80"
            Width="350"
            HorizontalAlignment="Left"
            IsIndeterminate="{Binding IsChecked, ElementName=chbIsIndeterminate}"/>
        </DockPanel>
      </Grid>
    </ScrollViewer>
  </DataTemplate>
</DataTemplates>