<Styles
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style Selector=":is(Visual).shadow">
    <Setter Property="Effect" Value="{StaticResource MH.Effects.DropShadow}"/>
  </Style>

  <Style Selector=":is(TemplatedControl):disabled">
    <Setter Property="BorderBrush" Value="{StaticResource MH.B.C.Disabled.Bo}"/>
    <Setter Property="Foreground" Value="{StaticResource MH.B.C.Disabled.Fo}"/>
  </Style>
</Styles>